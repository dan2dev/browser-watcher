    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.18",
    "@types/window-or-global": "^1.0.0",
    "codecov": "^3.1.0",
    "jest": "^23.6.0",
    "nyc": "^13.1.0",
    "prettier": "^1.13.2",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
