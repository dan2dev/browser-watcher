{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "rootDir": "./src/",
    "lib": [
      "es5",
      "es6",
      "es7",
      "esnext",
      "esnext.asynciterable",
      "es2015",
      "es2015.core",
      "es2015.promise",
      "es2015.collection",
      "es2015.symbol.wellknown",
      "es2016",
      "es2016.array.include",
      "es2017",
      "es2017.object",
      "es2017.sharedmemory",
      "dom",
      "dom.iterable",
      "webworker",
    ],
    "types": [
      "@types/window-or-global",
      "@types/node",
      "@types/jest",
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/*.test.ts",
    "node_modules/*",
    "assets/plugins/*",
    "node_modules/**/*",
    "node_modules/@types",
    "dist",
    "tsdist"
  ]
}